    <script>
        function calculateBMI() {
            const weight = document.getElementById('weight').value;
            const height = document.getElementById('height').value / 100; // Convert to meters
            
            if (weight && height) {
                const bmi = weight / (height * height);
                const bmiRounded = bmi.toFixed(1);
                
                let category, resultClass;
                
                if (bmi < 18.5) {
                    category = "Bajo peso";
                    resultClass = "underweight";
                } else if (bmi < 25) {
                    category = "Peso normal";
                    resultClass = "normal";
                } else if (bmi < 30) {
                    category = "Sobrepeso";
                    resultClass = "overweight";
                } else {
                    category = "Obesidad";
                    resultClass = "obese";
                }
                
                const resultElement = document.getElementById('result');
                resultElement.innerHTML = `<strong>Su IMC es: ${bmiRounded}</strong><br>Categoría: ${category}<br><br>`;
                
                if (category === "Bajo peso") {
                    resultElement.innerHTML += "Un IMC bajo puede estar asociado con deficiencias nutricionales, sistema inmunológico debilitado y otros problemas de salud. Consulte a un profesional sanitario.";
                } else if (category === "Peso normal") {
                    resultElement.innerHTML += "Su peso está dentro del rango considerado saludable. Mantenga hábitos alimenticios balanceados y actividad física regular.";
                } else if (category === "Sobrepeso") {
                    resultElement.innerHTML += "El sobrepeso puede aumentar el riesgo de enfermedades cardiovasculares, diabetes y otras condiciones. Considere consultar a un profesional de la salud para orientación.";
                } else {
                    resultElement.innerHTML += "La obesidad está asociada con mayor riesgo de múltiples condiciones crónicas, incluyendo enfermedades cardiovasculares, diabetes tipo 2 y algunos tipos de cáncer. Es importante buscar orientación profesional.";
                }
                
                resultElement.className = resultClass;
                resultElement.style.display = "block";
            }
        }

    </script>
